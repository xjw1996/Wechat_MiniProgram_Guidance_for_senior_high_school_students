page {  
  display: block;  
  min-height: 100%;  
  background-color: #ccfff7be;  
}
.UCenter-bg {
  background-image: url(http://image.zzd.sm.cn/851564912531661844.jpg?id=0);
  background-size: cover;
  height: 600rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 100rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}
.UCenter-bg .userpicture{
  border: 2px solid rgb(21, 3, 3);
  border-radius: 50%;
  height: 200rpx;
  width: 200rpx;
}