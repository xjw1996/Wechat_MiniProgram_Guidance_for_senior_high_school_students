
.UCenter-bg {
  background-image: url(http://5b0988e595225.cdn.sohucs.com/images/20180511/12ed5d2660164b4fb593f3fcdeec3361.jpeg);
  background-size: cover;
  height: 250rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 100rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}
.UCenter-bg .userpicture{
  border: 2px solid white;
  border-radius: 50%;
  height: 200rpx;
  width: 200rpx;
}